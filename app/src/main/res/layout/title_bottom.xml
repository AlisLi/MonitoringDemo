<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="61dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/deviceImage_pager_id"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/blue_item_device"/>

            <TextView
                android:id="@+id/deviceText_pager_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_bottom_device"
                android:layout_gravity="center"
                android:textColor="@color/text_color"
                android:textSize="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/MonitoringImage_pager_id"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/grey_monitoring"/>

            <TextView
                android:id="@+id/MonitoringText_pager_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_bottom_monitoring"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/userImage_pager_id"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/grey_user"/>

            <TextView
                android:id="@+id/userText_pager_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_bottom_user"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="10sp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>